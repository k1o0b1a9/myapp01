<% provide(:title, "Top") %>
<% if account_signed_in? %>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" >投稿者</th>
      <th scope="col" style="width: 200px">タイトル</th>
      <th scope="col" >投稿日</th>
    </tr>
  </thead>
<tbody>
    <% @posts.each do|post| %>
    <tr>
      <td><%= post.account.accountname %></td>
      <td><%= link_to(post.title, "/posts/#{post.id}") %></td>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "csvで出力する",excel_path(format: :csv), class: 'btn btn-primary' %>
<% else %>
<div class="button_wrapper">
<%= link_to "Sign UP",  new_account_registration_path, class: "btn-circle-border-double" %>
</div>
<% end %>