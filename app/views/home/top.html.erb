<% provide(:title, "Top") %>
<% if account_signed_in? %>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="width: 40px">No.</th>
      <th scope="col" style="width: 200px">投稿内容</th>
      <th scope="col" >投稿者</th>
      <th scope="col" >投稿日</th>
      <th scope="col">更新日時</th>
    </tr>
  </thead>
<tbody>
    <% @posts.each do|post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.content %></td>
      <td></td>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
      <td><%= post.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<%= link_to "Sign UP",  new_account_registration_path, class: "btn-sf-like" %>
<% end %>