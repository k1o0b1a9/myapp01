<% provide(:title, "Edit") %>
<%= form_tag("/posts/#{@post.id}/update") do %>
<div class="new-post">
  <textarea name="title" class="form-control" > <%= @post.title %> </textarea>
</div>
<div class="new-post">
  <textarea name="content" class="form-control"> <%= @post.content %> </textarea>
</div>
<div class="new-post">
  <input type="submit" value="保存" class="form-control">
</div>
<% end %>